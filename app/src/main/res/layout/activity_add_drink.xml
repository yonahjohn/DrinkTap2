<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDrinkActivity">

    <EditText
        android:id="@+id/add_drink_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.248"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_drink_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Volume (oz)"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/add_drink_description"
        app:layout_constraintStart_toStartOf="@+id/add_drink_description"
        app:layout_constraintTop_toBottomOf="@+id/add_drink_description" />

    <EditText
        android:id="@+id/add_drink_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="A content (% vol)"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="@+id/add_drink_volume"
        app:layout_constraintStart_toStartOf="@+id/add_drink_volume"
        app:layout_constraintTop_toBottomOf="@+id/add_drink_volume" />

    <Button
        android:id="@+id/add_drink_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#BCFF9800"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="@+id/add_drink_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/add_drink_content"
        app:layout_constraintTop_toBottomOf="@+id/add_drink_content" />
</androidx.constraintlayout.widget.ConstraintLayout>